    "require": {
        "robthree/twofactorauth": "^1.5.1"
    },
    "require-dev": {
        "hiqdev/hidev-php": "<2.0 || dev-master",
        "hiqdev/hidev-hiqdev": "<2.0 || dev-master"
    },
    "autoload": {
        "psr-4": {
            "hiqdev\\yii2\\mfa\\": "src"
        }
    },
    "extra": {
        "config-plugin": {
            "params": "src/config/params.php",
            "web": "src/config/web.php"
        }
    },
    "repositories": [
        {
            "type": "composer",
